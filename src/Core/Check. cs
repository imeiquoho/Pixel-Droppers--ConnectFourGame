using System;
using ConnectFourGame.Core;

namespace ConnectFourGame.Tests
{
    class ManualBoardTests
    {
        static void Main()
        {
            TestDropToken();
            TestIsColumnFull();
            TestInvalidMove();

            Console.WriteLine("✅ All tests completed.");
        }

        static void TestDropToken()
        {
            var board = new Board(6, 7);
            board.DropToken(0, 'X');

            char result = board.GetCell(5, 0); // bottom cell
            if (result != 'X')
                throw new Exception("❌ TestDropToken failed.");

            Console.WriteLine("✅ TestDropToken passed.");
        }

        static void TestIsColumnFull()
        {
            var board = new Board(1, 1);
            board.DropToken(0, 'X');

            if (!board.IsColumnFull(0))
                throw new Exception("❌ TestIsColumnFull failed.");

            Console.WriteLine("✅ TestIsColumnFull passed.");
        }

        static void TestInvalidMove()
        {
            var board = new Board(1, 1);
            board.DropToken(0, 'X');

            try
            {
                board.DropToken(0, 'O');
                throw new Exception("❌ TestInvalidMove failed. Exception not thrown.");
            }
            catch (InvalidOperationException)
            {
                Console.WriteLine("✅ TestInvalidMove passed.");
            }
        }
    }
}
